{
  "description": "Extension to toggle a SOCKS over SSH tunnel script, and switch browser proxy settings accordingly",
  "manifest_version": 2,
  "name": "socksoggler",
  "version": "1.0",
  "icons": {
    "48": "icons/logo.svg"
  },

  "applications": {
    "gecko": {
      "id": "socksoggler@0x778.tk",
      "strict_min_version": "63.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icons/logo.svg"
  },
  
  "permissions": ["nativeMessaging", "proxy", "storage", "menus"]

}
